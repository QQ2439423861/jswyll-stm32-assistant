{
	"name": "jswyll-stm32-assistant",
	"displayName": "STM32 Project Assistant",
	"description": "STM32工程助手，用于生成vscode的代码浏览、编辑、编译、下载、调试配置。",
	"icon": "icon.png",
	"version": "0.4.0",
	"publisher": "jswyll",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/jswyll/jswyll-stm32-assistant.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"embed",
		"stm32",
		"cortex-debug"
	],
	"activationEvents": [
		"workspaceContains:**/*.ioc"
	],
	"main": "./out/src/extension.js",
	"l10n": "./l10n",
	"contributes": {
		"commands": [
			{
				"command": "jswyll-stm32-assistant.diagnosticRtthreadInterrupt",
				"title": "%extension.commands.diagnosticRtthreadInterrupt%"
			}
		],
		"configuration": [
			{
				"title": "%extension.defaultGenerateConfig.title%",
				"properties": {
					"jswyll-stm32-assistant.cStandard": {
						"markdownDescription": "%extension.defaultGenerateConfig.cStandard.description%",
						"type": "string",
						"enum": [
							"",
							"c89",
							"c99",
							"c11",
							"c17",
							"c23",
							"gnu89",
							"gnu99",
							"gnu11",
							"gnu17",
							"gnu23"
						],
						"default": "c99",
						"scope": "resource"
					},
					"jswyll-stm32-assistant.cppStandard": {
						"markdownDescription": "%extension.defaultGenerateConfig.cppStandard.description%",
						"enum": [
							"",
							"c++98",
							"c++03",
							"c++11",
							"c++14",
							"c++17",
							"c++20",
							"c++23",
							"gnu++98",
							"gnu++03",
							"gnu++11",
							"gnu++14",
							"gnu++17",
							"gnu++20",
							"gnu++23"
						],
						"default": "c++11",
						"scope": "resource"
					},
					"jswyll-stm32-assistant.jlinkSpeed": {
						"markdownDescription": "%extension.defaultGenerateConfig.jlinkSpeed.description%",
						"type": "integer",
						"default": 6000,
						"minimum": 1,
						"maximum": 50000,
						"scope": "resource"
					}
				}
			},
			{
				"title": "%extension.generateConfig.title%",
				"properties": {
					"jswyll-stm32-assistant.redirectPrintf": {
						"markdownDescription": "%extension.generateConfig.redirectPrintf.description%",
						"type": "boolean",
						"default": true,
						"scope": "resource"
					},
					"jswyll-stm32-assistant.redirectPrintfUartNum": {
						"markdownDescription": "%extension.generateConfig.redirectPrintfUartNum.description%",
						"type": "integer",
						"enum": [
							1,
							2,
							3,
							4,
							5,
							6,
							7,
							8,
							9
						],
						"default": 1,
						"scope": "resource"
					},
					"jswyll-stm32-assistant.isUsingJswyllIap": {
						"markdownDescription": "%extension.generateConfig.isUsingJswyllIap.description%",
						"type": "boolean",
						"default": false,
						"scope": "resource"
					},
					"jswyll-stm32-assistant.relocateVectorEnbale": {
						"markdownDescription": "%extension.generateConfig.relocateVectorEnbale.description%",
						"type": "boolean",
						"default": false,
						"scope": "resource"
					},
					"jswyll-stm32-assistant.relocateVectorAddr": {
						"markdownDescription": "%extension.generateConfig.relocateVectorAddr.description%",
						"type": "string",
						"pattern": "^0x[0-9a-fA-F]+$",
						"default": "0x08004000",
						"scope": "resource"
					},
					"jswyll-stm32-assistant.selectedDebugger": {
						"markdownDescription": "%extension.generateConfig.selectedDebugger.description%",
						"type": "string",
						"default": "STLink",
						"scope": "resource"
					},
					"jswyll-stm32-assistant.isJlinkDirectlyDownload": {
						"markdownDescription": "%extension.generateConfig.isJlinkDirectlyDownload.description%",
						"type": "boolean",
						"default": false,
						"scope": "resource"
					},
					"jswyll-stm32-assistant.selectedInterfacet": {
						"markdownDescription": "%extension.generateConfig.selectedInterfacet.description%",
						"type": "string",
						"enum": [
							"SWD",
							"JTAG"
						],
						"default": "SWD",
						"scope": "resource"
					},
					"jswyll-stm32-assistant.gccCompilerPath": {
						"markdownDescription": "%extension.generateConfig.gccCompilerPath.description%",
						"type": "string",
						"default": "",
						"scope": "resource"
					},
					"jswyll-stm32-assistant.extraCompileDirs": {
						"markdownDescription": "%extension.generateConfig.extraCompileDirs.description%",
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [],
						"scope": "resource"
					},
					"jswyll-stm32-assistant.gccCompilerPathLast": {
						"markdownDescription": "%extension.generateConfig.gccCompilerPathLast.description%",
						"type": "string",
						"default": "",
						"scope": "application"
					}
				}
			},
			{
				"title": "%extension.diagnosticRtthreadInterrupt.title%",
				"properties": {
					"jswyll-stm32-assistant.diagnosticRtthreadInterruptAuto": {
						"markdownDescription": "%extension.diagnosticRtthreadInterruptAuto.description%",
						"type": "boolean",
						"default": true,
						"scope": "window"
					},
					"jswyll-stm32-assistant.diagnosticRtthreadInterruptGlobPattern": {
						"markdownDescription": "%extension.diagnosticRtthreadInterruptGlobPattern.description%",
						"type": "string",
						"default": "**/stm32*_it.c",
						"scope": "window"
					}
				}
			},
			{
				"title": "%extension.multirootWorkspace.title%",
				"properties": {
					"jswyll-stm32-assistant.workspaceFolderPicked": {
						"markdownDescription": "%extension.multirootWorkspace.workspaceFolderPicked.description%",
						"type": "string",
						"scope": "window"
					}
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "!explorerResourceIsFolder && resourcePath =~ /stm32.*xx_it\\.c$/",
					"command": "jswyll-stm32-assistant.diagnosticRtthreadInterrupt"
				}
			]
		}
	},
	"extensionDependencies": [
		"ms-vscode.cpptools",
		"marus25.cortex-debug"
	],
	"files": [
		"l10n",
		"out/src/",
		"out/views/",
		"CHANGELOG.md",
		"icon.png",
		"LICENSE",
		"package.nls.json",
		"package.nls.zh-CN.json"
	],
	"scripts": {
		"dev:webview": "cd views && npm run dev",
		"build:webview": "cd views && npm run build && cd ..",
		"watch:webview": "cd views && npm run watch",
		"compile": "tsc -p ./",
		"compress": "node out/dev/compress.js",
		"lint": "eslint \"src/**/*.ts\"",
		"increase-publish-commit": "node out/dev/increaseVersion.js && npm run publish && node out/dev/commit.js",
		"package": "vsce package --allow-unused-files-pattern -o build/jswyll-stm32-assistant.vsix",
		"publish": "vsce publish --allow-unused-files-pattern",
		"vscode:prepublish": "npm run compile && npm run build:webview && npm run compress",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"minimatch": "^10.0.1"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.8.0",
		"@types/node": "^20.9.0",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"@vue/eslint-config-prettier": "^9.0.0",
		"@vue/eslint-config-typescript": "^13.0.0",
		"eslint": "^8.56.0",
		"eslint-plugin-vue": "^9.23.0",
		"terser": "^5.36.0",
		"typescript": "^5.6.2"
	}
}
