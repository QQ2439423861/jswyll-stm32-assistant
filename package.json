{
	"name": "jswyll-stm32-assistant",
	"displayName": "STM32 Project Assistant",
	"description": "STM32工程助手，用于生成vscode的代码浏览、编辑、编译、下载、调试配置。",
	"icon": "icon.png",
	"version": "0.3.1",
	"publisher": "jswyll",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/jswyll/jswyll-stm32-assistant.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"stm32",
		"cortex-debug"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "jswyll.stm32.config-vscode",
				"title": "生成STM32工程的VS Code配置"
			}
		],
		"configuration": [
			{
				"title": "生成配置的默认设置",
				"properties": {
					"jswyll-stm32-assistant.cStandard": {
						"description": "用于 IntelliSense 的 C 语言标准的版本。",
						"type": "string",
						"enum": [
							"",
							"c89",
							"c99",
							"c11",
							"c17",
							"c23",
							"gnu89",
							"gnu99",
							"gnu11",
							"gnu17",
							"gnu23"
						],
						"default": "c99"
					},
					"jswyll-stm32-assistant.cppStandard": {
						"description": "用于 IntelliSense 的 C++ 语言标准的版本。",
						"enum": [
							"",
							"c++98",
							"c++03",
							"c++11",
							"c++14",
							"c++17",
							"c++20",
							"c++23",
							"gnu++98",
							"gnu++03",
							"gnu++11",
							"gnu++14",
							"gnu++17",
							"gnu++20",
							"gnu++23"
						],
						"default": "c++11"
					},
					"jswyll-stm32-assistant.jlinkSpeed": {
						"description": "Jlink的仿真速度，单位为KB/s。",
						"type": "integer",
						"default": 6000,
						"minimum": 1,
						"maximum": 50000
					},
					"jswyll-stm32-assistant.iapAppBaseAddr": {
						"markdownDescription": "[Jswyll IAP功能](https://jswyll.com/note/iap/)的APP区起始地址，应为以0x开头的十六进制数，默认为0x08004000。",
						"type": "string",
						"pattern": "^0x[0-9a-fA-F]+$",
						"default": "0x08004000"
					}
				}
			},
			{
				"title": "配置选择记录",
				"properties": {
					"jswyll-stm32-assistant.redirectPrintf": {
						"description": "将printf函数重定向输出到串口。",
						"type": "boolean",
						"default": true
					},
					"jswyll-stm32-assistant.redirectPrintfUartNum": {
						"description": "重定向输出时，打印的串口号。",
						"type": "integer",
						"enum": [
							1,
							2,
							3,
							4,
							5,
							6,
							7,
							8,
							9
						],
						"default": 1,
						"when": "jswyll-stm32-assistant.redirectPrintf"
					},
					"jswyll-stm32-assistant.isUsingJswyllIap": {
						"description": "是否使用Jswyll IAP功能。",
						"type": "boolean",
						"default": false
					},
					"jswyll-stm32-assistant.selectedDebugger": {
						"description": "选择的调试器类型。",
						"type": "string"
					},
					"jswyll-stm32-assistant.isJlinkDirectlyDownload": {
						"description": "选择的调试器类型为JLink时，是否调用Jlink.exe直接下载，而不是使用OpenOCD进行下载。",
						"type": "boolean",
						"default": false
					},
					"jswyll-stm32-assistant.selectedInterfacet": {
						"description": "重定向输出时，打印的串口号。",
						"type": "string",
						"enum": [
							"SWD",
							"JTAG"
						],
						"default": "SWD"
					},
					"jswyll-stm32-assistant.gccCompilerPath": {
						"description": "GCC编译器路径。",
						"type": "string"
					},
					"jswyll-stm32-assistant.extraCompileDirs": {
						"description": "额外的编译目录。",
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				}
			}
		]
	},
	"extensionDependencies": [
		"ms-vscode.cpptools",
		"cschlosser.doxdocgen",
		"marus25.cortex-debug"
	],
	"files": [
		"LICENSE",
		"icon.png",
		"out/",
		"out/logger.js"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"build:webview": "cd views && npm run build",
		"compile": "npm run build:webview && tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"package": "npm run build:webview && vsce package -o build/jswyll-stm32-assistant.vsix",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "^20.9.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^5.6.2"
	}
}
